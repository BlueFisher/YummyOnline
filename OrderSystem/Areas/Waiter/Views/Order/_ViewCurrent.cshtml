<div class="container-fluid">
	<ul class="list-group li-group-no-border-radius"
		ng-if="dine.length!=0"
		ng-repeat="dine in dines">
		
		<li class="list-group-item">
			点单号：{{dine.Id}}
		</li>
		<li class="list-group-item">
			下单时间：{{dine.BeginTime | date:'yyyy/M/d HH:mm:ss'}}
		</li>
		<li class="list-group-item">
			人数：{{dine.HeadCount}}
		</li>
		<!-- ngRepeat menu -->
		<li class="list-group-item">
			<div class="row" ng-repeat="menu in dine.DineMenus">
				<div class="col-xs-6">
					{{menu.Menu.Name}}
					<span class="label label-default"
						  ng-repeat="remark in menu.Remarks">
						{{remark.Name}}
					</span>
				</div>
				<div class="col-xs-2 text-right">
					&times;{{menu.Count}}
				</div>
				<div class="col-xs-4 text-right">
					<s ng-show="menu.OriPrice!=menu.Price">
						{{menu.OriPrice | currency : "￥"}}
					</s>
					<span class="text-danger">
						{{menu.Price | currency : "￥"}}
					</span>
				</div>
			</div>
		</li>

		<li class="list-group-item">
			<div class="row">
				<div class="col-xs-6">
					<span class="fa fa-shopping-cart"></span> 共计：
				</div>
				<div class="col-xs-6 text-right">
					<s ng-show="dine.OriPrice!=dine.Price">
						{{dine.OriPrice | currency : "￥"}}
					</s>
					<span class="text-danger">
						{{dine.Price | currency : "￥"}}
					</span>
				</div>
				<div ng-if="dine.Discount<1">
					<div class="col-xs-6">
						{{dine.DiscountName}}
					</div>
					<div class="col-xs-6 text-right">
						{{dine.Discount * 10}} 折
					</div>
				</div>
			</div>
		</li>
		<li class="list-group-item list-group-item-align" ng-if="dine.DinePaidDetails.length>0">
			<div class="row" ng-repeat="dinePaidDetail in dine.DinePaidDetails">
				<div class="col-xs-6">
					{{dinePaidDetail.PayKind.Name}}
					<span class="text-danger" ng-if="!dine.IsPaid">[未支付]</span>
				</div>
				<div class="col-xs-6 text-right text-danger">
					{{dinePaidDetail.Price | currency : "￥"}}
				</div>
			</div>
		</li>
	</ul>
	<ul class="list-group li-group-no-border-radius" ng-if="dines.length == 0">
		<li class="list-group-item">
			暂无订单
		</li>
	</ul>
</div>


<section>
	<ul class="control">
		<li class="control-btn control-btn-3 no-border"
			route-href="/">
			返回
		</li>

		<li class="control-btn control-btn-6 control-btn-desk">
			@Html.Partial("_PartialOpenDesk")
		</li>

		<li class="control-btn control-btn-3 control-btn-option">
			@Html.Partial("_PartialOpenOption")
		</li>
	</ul>
</section>