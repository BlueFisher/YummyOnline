<div class="container-fluid" ng-static-height="88">
	<h3 class="title">会员注册</h3>
	<form name="form">
		<div class="form-group">
			<input class="form-control form-control-round" type="number" name="PhoneNumber"
				   placeholder="手机"
				   ng-model="signupFormData.PhoneNumber" required ng-minlength="11" ng-maxlength="11">
		</div>

		<div class="form-group input-group">
			<input class="form-control form-control-round" name="Code" type="number"
				   placeholder="验证码"
				   ng-model="signupFormData.Code" required ng-disabled="!canTypeSMS">
			<div class="input-group-btn">
				<button type="button" class="btn btn-default btn-round"
						ng-disabled="!form.PhoneNumber.$valid || !canSendSMS" ng-click="sendSMS()">
					{{sendSMSBtnText}}
				</button>
			</div>
		</div>
		<div class="form-group">
			<input class="form-control form-control-round" type="password" name="Password"
				   placeholder="密码"
				   ng-model="signupFormData.Password" required>
		</div>
		<div class="form-group">
			<input class="form-control form-control-round" type="password" name="PasswordAga"
				   placeholder="再输一遍密码"
				   ng-model="signupFormData.PasswordAga" required>
		</div>
		<button class="btn btn-primary btn-round btn-block" type="button"
				ng-disabled="!form.$valid" ng-click="signup()">
			注册
		</button>
	</form>
</div>