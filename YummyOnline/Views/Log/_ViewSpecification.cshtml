<div class="row">
	@foreach(KeyValuePair<string, List<string>> dirFile in ViewBag.DirFiles) {
		<div class="col-md-6">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">@dirFile.Key</h3>
				</div>
				<div class="table-responsive">
					<table class="table no-margin">
						@foreach(string file in dirFile.Value) {
							<tr>
								<td class="col-md-11">@file</td>
								<td class="col-md-1 text-right">
									@if(file.EndsWith(".html") || file.EndsWith(".htm")) {
										<a class="btn btn-primary btn-sm" href="/Log/GetFile?dir=@dirFile.Key&name=@file" target="_blank">
											预览
										</a>
									}
									else {
										<a class="btn btn-danger btn-sm" href="/Log/GetFile?dir=@dirFile.Key&name=@file" target="_blank">
											下载
										</a>
									}
									
								</td>
							</tr>
						}
					</table>
				</div>
				
			</div>
		</div>
	}
</div>