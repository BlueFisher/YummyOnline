<div class="row">
	@foreach(KeyValuePair<string, List<FileInfo>> dirFile in ViewBag.DirFiles) {
		<div class="col-md-6">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">@dirFile.Key</h3>
				</div>
				<div class="table-responsive">
					<table class="table no-margin">
						@foreach(FileInfo file in dirFile.Value) {
							<tr>
								<td class="col-md-5">@file.Name</td>
								<td class="col-md-6 text-right">@file.LastWriteTime.ToString("yy-MM-dd hh:mm:ss")</td>
								<td class="col-md-1 text-right">
									@if(file.Name.EndsWith(".html") || file.Name.EndsWith(".htm")) {
										<a class="btn btn-primary btn-sm" href="/Log/GetFile?dir=@dirFile.Key&name=@file.Name" target="_blank">
											预览
										</a>
									}
									else {
										<a class="btn btn-danger btn-sm" href="/Log/GetFile?dir=@dirFile.Key&name=@file.Name" target="_blank">
											下载
										</a>
									}
									
								</td>
							</tr>
						}
					</table>
				</div>
				
			</div>
		</div>
	}
</div>