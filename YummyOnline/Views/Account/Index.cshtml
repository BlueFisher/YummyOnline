<!DOCTYPE html>
<html ng-app="adminApp">
<head>
	<meta charset="utf-8">
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>YummyOnline</title>
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

	@Styles.Render("~/css/bootstrap")
	@Styles.Render("~/css/fontawesome")
	<link href="~/Content/css/lib/toastr.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/Content/css/AdminLTE/AdminLTE.min.css" />
	<link rel="stylesheet" href="~/Content/css/AdminLTE/skins/skin-blue.min.css" />
	<link rel="stylesheet" href="~/Content/css/lib/awesome-bootstrap-checkbox.css"/>

	<link rel="stylesheet" href="~/Content/css/global.css" />
</head>

<body class="hold-transition login-page" ng-controller="SigninCtrl">
	<div class="login-box">
		<div class="login-logo">
			<span>YummyOnline</span>
		</div>
		<div class="login-box-body">
			<p class="login-box-msg">登录</p>
			<form name="form" ng-submit="signin()">
				<div class="form-group has-feedback">
					<input type="text" class="form-control" placeholder="手机 / 邮箱" 
						   name="Username" ng-model="signinFormData.UserName" required>
					<span class="fa fa-user form-control-feedback"></span>
				</div>
				<div class="form-group has-feedback">
					<input type="password" class="form-control" placeholder="密码"
						   name="Password" ng-model="signinFormData.Password" required>
					<span class="fa fa-lock form-control-feedback"></span>
				</div>
				<div class="form-group">
					<div class="checkbox">
						<input type="checkbox" id="remeb" ng-model="signinFormData.RememberMe">
						<label for="remeb">
							记住我
						</label>
					</div>
				</div>
				<button type="submit" class="btn btn-primary btn-block btn-flat"
						ng-disabled="!form.$valid || isSigning">
					<span ng-show="!isSigning">登录</span>
					<span ng-show="isSigning"><i class="fa fa-spinner fa-pulse fa-fw"></i> 正在登录...</span>
				</button>
			</form>
		</div>
	</div>

	@Scripts.Render("~/scripts/jquery")
	@Scripts.Render("~/scripts/bootstrap")
	@Scripts.Render("~/scripts/angular")
	@Scripts.Render("~/scripts/angular-route")
	@Scripts.Render("~/scripts/angular-ui-bootstrap")
	<script src="~/Scripts/lib/toastr.min.js"></script>
	<script src="~/Scripts/adminLTEApp.js"></script>
	
	<script src="~/Scripts/app.js"></script>
	<script src="~/Scripts/Account/controllers.js"></script>
</body>
</html>
