<div class="box">
	<div class="box-body">
		<div class="form-group">
			<select class="form-control" ng-model="hotelId" convert-to-number>
				<option ng-repeat="hotel in hotels" value="{{hotel.Id}}">{{hotel.Name}} ({{hotel.Id}})</option>
			</select>
		</div>

		<div class="text-right">
			<div class="btn-group">
				<button class="btn btn-default"
						uib-datepicker-popup
						show-button-bar="false"
						popup-placement="bottom-right"
						datepicker-append-to-body="true"
						ng-model="dateTime"
						ng-click="isOpen = true"
						is-open="isOpen">
					<span>{{dateTime | date:'yyyy/MM/dd'}}</span>
				</button>

				<button class="btn btn-primary"
						ng-click="refreshDineIds()">
					查询所有订单号
				</button>
			</div>
		</div>

		<div ng-show="allDineIds.length > 0">
			<hr />

			<div class="waterfall-6">
				<a href="javascript:;" class="waterfall-item"
				   ng-click="addDineId(dineId)"
				   ng-repeat="dineId in allDineIds">
					{{dineId}}
					<i class="fa fa-plus-circle"></i>
				</a>
			</div>

			<div class="text-right">
				<button class="btn btn-default"
						ng-click="addAllDineIds()">
					添加所有
				</button>
			</div>
		</div>

		<hr />

		<div class="form-group">
			<textarea rows="3" class="form-control" ng-model="dineIds" placeholder="订单号, 多个订单号以空格分割"></textarea>
		</div>
		<div class="text-right">
			<button class="btn btn-default" ng-click="dineIds = ''">清空</button>
			<button class="btn btn-primary" ng-click="search()">查询</button>
		</div>

		<div ng-show="isLoading">
			<b><i class="fa fa-spinner fa-pulse fa-fw"></i> Loading...</b>
		</div>
		<div ng-hide="isLoading || dines.length == 0">
			<hr />
			<div class="waterfall-4">
				<div class="waterfall-item" ng-repeat="dine in dines">
					@Html.Partial("~/Views/Shared/_PartialDine.cshtml", true)
				</div>
			</div>
		</div>

	</div>
</div>
