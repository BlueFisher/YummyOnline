<div class="box">
	<div class="box-body">
		<div class="form-group">
			<select class="form-control" ng-model="hotelId" convert-to-number>
				<option ng-repeat="hotel in hotels" value="{{hotel.Id}}">{{hotel.Name}} ({{hotel.Id}})</option>
			</select>
		</div>
		<div class="form-group">
			<textarea rows="3" class="form-control" ng-model="dineIds" placeholder="订单号, 多个订单号以空格分割"></textarea>
		</div>
		<div class="text-right">
			<button class="btn btn-primary" ng-click="search()">查询</button>
		</div>

		<div ng-show="isLoading">
			<b><i class="fa fa-spinner fa-pulse fa-fw"></i> Loading...</b>
		</div>
		<div ng-hide="isLoading || dines.length == 0">
			<hr />
			<div class="waterfall-4">
				<div class="waterfall-item" ng-repeat="dine in dines">
					@Html.Partial("~/Views/Shared/_PartialDine.cshtml")
				</div>
			</div>
		</div>
		
	</div>
</div>
