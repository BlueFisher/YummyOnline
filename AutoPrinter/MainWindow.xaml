<Window xmlns:awe="http://schemas.awesomium.com/winfx"  x:Class="AutoPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:data="http://schemas.awesomium.com/winfx/data"
		xmlns:core="http://schemas.awesomium.com/core"
        xmlns:local="clr-namespace:AutoPrinter"
        mc:Ignorable="d"
        Title="YummyOnline自助打印" Height="756.619" Width="1215.954" WindowState="Maximized">

	<Window.Resources>
		<awe:WebSessionProvider x:Key="webSession">
			<awe:WebSessionProvider.DataSources>
				<data:ResourceDataSourceProvider x:Key="local" />
			</awe:WebSessionProvider.DataSources>
			<core:WebPreferences/>
		</awe:WebSessionProvider>
	</Window.Resources>

	<Grid>
		<awe:WebControl
			Name="browser"
			WebSession="{Binding Source={StaticResource webSession}}"
			Source="asset://local/web/main.html" NativeViewInitialized="browser_NativeViewInitialized" />
	</Grid>
</Window>
