<Window x:Class="AutoPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoPrinter"
        mc:Ignorable="d"
        Title="MainWindow" Height="459.323" Width="846.312">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<TextBox x:Name="textBoxTcpLog" Grid.Column="0" Margin="10,30,10,0" TextWrapping="Wrap" Text=""/>
		<TextBox x:Name="textBoxIpPrinterLog" Grid.Column="1" Margin="10,30,10,0" TextWrapping="Wrap" Text=""/>
		<Grid Grid.Row="1" Grid.ColumnSpan="3">
			<Button x:Name="buttonTestPrinters" Content="所有打印机测试" Margin="0,10,10,0" VerticalAlignment="Top" Height="23" HorizontalAlignment="Right" Width="120"/>
			<TextBox x:Name="textBoxIp" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
			<Button x:Name="buttonTestRemoteDines" Content="远程订单测试" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="101" Height="23"/>
			<Button x:Name="buttonTestLocalDines" Content="本地订单测试" HorizontalAlignment="Left" Margin="241,10,0,0" VerticalAlignment="Top" Width="101" Height="23"/>
			<Button x:Name="buttonTestPrinter" Content="打印机测试" HorizontalAlignment="Left" Margin="347,10,0,0" VerticalAlignment="Top" Width="101" Height="23"/>
		</Grid>
		<ListBox x:Name="listBoxIpPrinter" Grid.Column="2" Margin="10,30,10,0"/>
		<TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="服务器连接:" VerticalAlignment="Top"/>
		<TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="打印机日志:" VerticalAlignment="Top" Grid.Column="2"/>
		<TextBlock x:Name="textBlock3" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="订单日志:" VerticalAlignment="Top"/>
	</Grid>
</Window>
