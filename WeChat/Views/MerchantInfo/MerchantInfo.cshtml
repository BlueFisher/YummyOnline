

@{
    Layout = null;
}
@{ 
    var ctx = new YummyOnlineDAO.Models.YummyOnlineContext();
    var result = ctx.Articles.Where(d => d.Status == YummyOnlineDAO.Models.ArticleStatus.Granted).Select(s => new { s.Id, s.Title, s.PicturePath, s.Description,s.Body});
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>商户信息</title>
    <link rel="stylesheet" href="~/node_modules/materialize-v0.97.7/materialize/css/materialize.css" />
    <link rel="stylesheet" href="~/node_modules/materialize-v0.97.7/materialize/css/materialize.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div>
        <div class="row">
            @foreach (var i in result)
            {
                <div class="col s12 m7">
                    <div class="card">
                        <div class="card-image">
                            <img src="@i.PicturePath">
                            <span class="card-title" id="title">@i.Title</span>
                        </div>
                        <div class="card-content" id="information">
                            <p>
                              @i.Description
                            </p>
                        </div>
                        <div class="card-action">
                            <a href="MerchantInfo/Info?article=@i.Id">点击阅读全文</a>
                            @*<a href="@i.Body">点击阅读全文</a>*@
                        </div>
                    </div>
                </div>
            }
            @*@foreach (var j in result)
            {
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="@j.PictruePath">
                    </div>
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">@j.Title<i class="material-icons right">more_vert</i></span>
                        <p><a href="MerchantInfo/Info?article=@j.Id">点击阅读全文</a></p>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">@j.Title<i class="material-icons right"></i></span>
                        <p>@j.Description</p>
                    </div>
                </div>
            }*@
        </div>
    </div>
</body>
</html>
