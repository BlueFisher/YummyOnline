
@{

    Layout = null;
}

<div ng-controller="PrintersCtrl">

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop = "static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close"
                            data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        打印机设置
                    </h4>
                </div>
                <div class="modal-body">
                    <div><span class="col-md-2">打印机名:</span><input type="text" ng-model="newPrinter.name" /></div>
                    @*<div>
                        <span class="col-md-2">打印机ip地址    :</span><input type="" ng-model="newPrinter.ipaddress" />
                    </div>
                    <div>
                        <span >格式为:XXX.XXX.XXX.XXX</span>
                    </div>*@
                   


                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="button" ng-click="addPrinter()" data-dismiss="modal">添加</button>
                    <button class="btn btn-warning" type="button" data-dismiss="modal">取消</button>
                </div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>

    <table class="table table-bordered table-hover table-striped table-responsive">
        <thead><tr><th>打印机名字</th><th>打印机ip地址</th><th>可用状态</th><th class="col-md-2">相关操作</th></tr></thead>

        <tr ng-repeat="printer in printers">

            <td>
                <span ng-if="!printer.isAlt">{{printer.Name}}</span>
                <input ng-if="printer.isAlt" type="text" ng-model="printer.Name" />
            </td>
            <td>
                <span ng-if="!printer.isAlt">{{printer.IpAddress}}</span>
                <input ng-if="printer.isAlt" type="text" ng-model="printer.IpAddress" />
            </td>
            <td>
                <span class="label label-success arrowed" ng-if="printer.Usable">可用</span>
                <span class="label label-warning" ng-if="!printer.Usable">
                    <i class="icon-warning-sign bigger-120"></i>
                    不可用
                </span>
            </td>
            <td>
                <button type="button" class="btn btn-minier btn-primary dropdown-toggle"  ng-click="altPrinter(printer)" ng-if="!printer.isAlt">
                    @*修改*@
                    <i class="icon-edit icon-on-right bigger-110"></i>
                </button>
                <button type="button" class="btn btn-minier btn-success dropdown-toggle"  ng-if="printer.isAlt" ng-click="finishaltPrinter(printer)">
                    @*完成*@
                    <i class="icon-ok icon-on-right bigger-110"></i>
                </button>
                <button type="button" class="btn btn-minier btn-danger dropdown-toggle"  ng-click="altPrinter(printer)" ng-if="printer.isAlt">
                    @*取消*@
                    <i class="icon-remove icon-on-right bigger-110"></i>
                </button>
                <button type="button" class="btn btn-minier btn-danger dropdown-toggle"  ng-if="printer.Usable" ng-click="switch(printer)">
                    @*禁用*@
                    <i class="icon-ban-circle icon-on-right bigger-110"></i>
                </button>
                <button type="button" class="btn btn-minier btn-success dropdown-toggle" ng-if="!printer.Usable" ng-click="switch(printer)">
                    @*启用*@
                    <i class="icon-ok-circle icon-on-right bigger-110"></i>
                </button>
                <button type="button" class="btn btn-minier btn-danger dropdown-toggle"  ng-click="DeletePrinter(printer)">
                    @*删除*@
                    <i class="icon-trash icon-on-right bigger-110"></i>
                </button>
            </td>
        </tr>
        



    </table>
    <button class="btn btn-app btn-primary btn-xs" data-toggle="modal" data-target="#myModal">
        添加
        <i class="icon-edit bigger-230"></i>
    </button>
</div>
