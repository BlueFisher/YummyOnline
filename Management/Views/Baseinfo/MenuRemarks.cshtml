@{
    Layout = null;
}
<link href="../Content/css/style.css" rel="stylesheet" />
<div class="row" ng-init="intialize()">
    <div class="col-xs-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>名称</th>
                    <th>价格</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="remark in RemarkElement.Remarks">
                    <td>{{remark.Name}}</td>
                    <td>{{remark.Price.toFixed(2)}}</td>
                    <td>
                        <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                            <button class="btn btn-xs btn-info tooltip-success" data-rel="tooltip" data-placement="bottom" title="修改备注" tool ng-click="OpenEditModel(remark)">
                                <i class="icon-edit bigger-120"></i>
                            </button>
                            <button class="btn btn-xs btn-danger tooltip-success" data-rel="tooltip" data-placement="bottom" title="删除备注" tool ng-click="DeleteRemark(remark)">
                                <i class="icon-trash bigger-120"></i>
                            </button>
                        </div>
                        <div class="visible-xs visible-sm hidden-md hidden-lg">
                            <div class="inline position-relative">
                                <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown">
                                    <i class="icon-cog icon-only bigger-110"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                    <li>
                                        <a href="javascript:;" class="tooltip-success" data-rel="tooltip" title="编辑" ng-click="OpenEditModel(remark)">
                                            <span class="green">
                                                <i class="icon-edit bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;" class="tooltip-error" data-rel="tooltip" title="删除" ng-click="DeleteRemark(remark)">
                                            <span class="red">
                                                <i class="icon-trash bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div><!--hidden over-->
                    </td>
                </tr>
            </tbody>
        </table><!--table over-->
        <p>
            <a href="javascript:;" class="btn btn-app btn-primary btn-xs" ng-click="OpenAddModel()">
                <i class="icon-edit bigger-230"></i>
                添加
            </a>
        </p>
    </div><!--col over-->
</div><!--row over-->


<script type="text/ng-template" id="ModalRemarksEdit.html">
    <form ng-submit="EditRemark()">
        <div class="modal-header">
            <h3 class="modal-title">
                修改备注信息
            </h3>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <p>
                            名称:
                            <input type="text" ng-model="RemarkElement.CurRemark.Name" maxlength="20" required/>
                        </p>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <p>
                            价格:
                            <input type="number" ng-model="RemarkElement.CurRemark.Price" min="0" required/>
                        </p>
                    </div>
                </div><!-- row end  -->
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="submit" ng-disabled="RemarkElement.isAjax"><img src="../../Content/images/loading.gif" ng-if="RemarkElement.isAjax" style="vertical-align:middle;" />保存</button>
            <button class="btn btn-warning" type="button" ng-click="cancel()">取消</button>
        </div>
    </form>
</script>

<script type="text/ng-template" id="ModalRemarksAdd.html">
    <form ng-submit="AddRemark()">
        <div class="modal-header">
            <h3 class="modal-title">
                修改备注信息
            </h3>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <p>
                            名称:
                            <input type="text" ng-model="RemarkElement.CurRemark.Name" required maxlength="20"/>
                        </p>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <p>
                            价格:
                            <input type="number" ng-model="RemarkElement.CurRemark.Price" required min="0"/>
                        </p>
                    </div>
                </div><!-- row end  -->
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="submit"><img src="../../Content/images/loading.gif" ng-if="RemarkElement.isAjax" style="vertical-align:middle;" />添加</button>
            <button class="btn btn-warning" type="button" ng-click="cancel()">取消</button>
        </div>
    </form>
</script>
