
<script type="text/ng-template" id="customerModal.html">
	<div class="modal-header">
		<h3 class="modal-title">会员登录</h3>
	</div>
	<div class="modal-body customer-modal">
		<form class="text-center" name="form">
			<div class="form-group">
				<input type="text" class="form-control" name="PhoneNumber" placeholder="手机"
					   required ng-model="signinFormData.PhoneNumber">
			</div>
			<div class="form-group">
				<input type="password" class="form-control" name="Password" placeholder="密码"
					   required ng-model="signinFormData.Password">
			</div>
			<button type="button" class="btn btn-primary btn-block"
					ng-disabled="!form.$valid" ng-click="signin()">
				登 录
			</button>
		</form>
	</div>
	<div class="modal-footer">
		<button class="btn btn-default" type="button" ng-click="ok()">关闭</button>
	</div>
</script>