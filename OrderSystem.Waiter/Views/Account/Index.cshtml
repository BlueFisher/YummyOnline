@{
	Layout = "~/Views/Shared/_LayoutGlobal.cshtml";
}

@section Script{
	<script src="~/Scripts/Account/controllers.js"></script>
}

<div class="container-fluid index" ng-controller="SigninCtrl">
	<div class="text-center">
		<img class="img-logo" src="~/Content/image/logo.png">
		<p class="title">欢迎使用店小二点餐系统</p>
	</div>
	<form class="text-center" name="form">
		<div class="form-group">
			<input type="text" class="form-control" name="SigninName" placeholder="工号"
				   required ng-model="signinFormData.SigninName">
		</div>
		<div class="form-group">
			<input type="password" class="form-control" name="Password" placeholder="密码"
				   required ng-model="signinFormData.Password">
		</div>
		<button type="button" class="btn btn-signin"
				ng-disabled="!form.$valid" ng-click="signin()">
			登 录
		</button>
	</form>
</div>